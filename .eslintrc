{
  "extends": ["wesbos"],
  "rules": {
    "no-plusplus": 0,
    "no-console": 1,
    "no-var": 0,
    "no-shadow": 1,
    "react/prop-types": 1,
    "react-hooks/exhaustive-deps": 2,
    "react/destructuring-assignment": 1,
    "react/no-unused-state": 1,
    "jsx-a11y/no-onchange": 2,
    "jsx-a11y/label-has-for": 0,
    "react/jsx-key": 2,
    "global-require": 0,
    "no-restricted-globals": 1,
    "jsx-a11y/aria-role": 1,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80
      }
    ]
  }
}
